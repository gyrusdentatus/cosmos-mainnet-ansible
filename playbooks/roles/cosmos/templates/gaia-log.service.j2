[Unit]
Description=gaia block height logger (0.1.0)
# After=network.target
# After=systemd-user-sessions.service
# After=network-online.target

[Service]
User=gaia
Type=simple

ExecStart=/usr/bin/python3 /usr/local/lib/gaiad-height.py 
Environment=PYTHONUNBUFFERED=1
Restart=on-failure
RestartSec=30
StartLimitInterval=350
StartLimitBurst=10

[Install]
WantedBy=multi-user.target